<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context="com.example.supermercadoapi.">

    <EditText
        android:id="@+id/editTextModificarNombre"
        android:layout_width="386dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:hint="Nuevo nombre del producto"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editTextModificarPrecio"
        android:layout_width="383dp"
        android:layout_height="48dp"
        android:layout_below="@+id/editTextModificarNombre"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:hint="Nuevo Precio"
        android:textColor="@android:color/black" />


    <EditText
        android:id="@+id/editTextModificarDescripcion"
        android:layout_width="380dp"
        android:layout_height="56dp"
        android:layout_below="@+id/editTextModificarPrecio"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:hint="Nueva Descripcion"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editTextModificarProcedencia"
        android:layout_width="383dp"
        android:layout_height="48dp"
        android:layout_below="@+id/editTextModificarDescripcion"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:hint="Nuevo Destino de Procedencia"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnModificarProducto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextModificarProcedencia"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:text="Actualizar Restaurante"
        android:textColor="@android:color/black" />

</RelativeLayout>
